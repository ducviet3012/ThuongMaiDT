@model ThuongMaiDT.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <form asp-action="DangNhap" asp-controller="KhachHang" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Username" class="form-control">
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
                    <a asp-action="QuenMatKhau" asp-controller="KhachHang" class="btn border-danger">Quên mật khẩu</a>
                    <a asp-action="DangKy" asp-controller="KhachHang" class="btn border-danger">Đăng ký nếu bạn chưa có tài khoản</a>
                </div>
            </div>
        </form>
    </div>
</div>

