@model IEnumerable<ThuongMaiDT.ViewModels.CartItem>

<h1>Đơn hàng được đặt thành công</h1>

<table>
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tenhh</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia</td>
                <td>@item.ThanhTien</td>
            </tr>
        }
    </tbody>
</table>
